= f.input :category_id, as: :select, collection: @categories.map{ |category| [category.name, category.id]}, label: 'Cat√©gorie'
= f.input :name
= f.input :description
= f.input :buy_at, as: :date, html5: true
= f.input :value
= f.input :quantity, input_html: {min: 1}

= f.fields_for :item_documents, data: {turbo: false} do |form|
  = render 'shared/form/document_input', f: form

.d-flex.justify-content-end.gap-2
