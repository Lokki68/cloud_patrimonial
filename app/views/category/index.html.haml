.container-fluid
  .card.my-2
    = render 'shared/card/card_header', title: 'Categories', header_cta: true do
      = render IconButtonComponent.new( title: 'Ajouter', path: new_category_path, icon: 'fas fa-plus' )
    .card_body
      %table.table.table-striped.table-hover.align-middle
        %thead
          %tr
            %th= 'Name'
            %th= 'Description'
            %th= 'Couleur'
            %th.text-end= 'Action'
        %tbody
          != render partial: 'category', collection: @categories

